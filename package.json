{
    "name": "bluetooth-controller",
    "description": "Demo app to control ESP32 devices through bluetooth. Uses esbuild as bundler with Preact and Typescript.",
    "license": "MIT",
    "author": "Ryan Weiss (rw3iss@gmail.com)",
    "version": "0.0.0",
    "engines": {
        "node": ">=20"
    },
    "scripts": {
        "dev": "rm -rf build && concurrently -k -r \"node scripts/esbuild/dev.js --config tsconfig.json\" \"web-dev-server --config scripts/web-dev-server.config.js\"",
        "build": "rm -rf build && node scripts/esbuild/build.js --config tsconfig.json",
        "start": "web-dev-server --config scripts/web-dev-server.config.js"
    },
    "dependencies": {
        "better-local-storage-fallback": "^1.0.0",
        "dotenv": "^16.4.7",
        "eventbusjs": "^0.2.0",
        "plotly.js-dist": "^2.35.3",
    },
    "devDependencies": {
        "@web/dev-server": "^0.4.6",
        "autoprefixer": "^10.4.20",
        "concurrently": "^8.2.2",
        "esbuild": "^0.24.2",
        "esbuild-envfile-plugin": "^1.0.7",
        "esbuild-node-externals": "^1.16.0",
        "esbuild-sass-plugin": "^3.3.1",
        "fs-extra": "^11.2.0",
        "glob": "^11.0.1",
        "postcss": "^8.4.49",
        "postcss-preset-env": "^10.1.3",
        "tslib": "^2.6.3",
        "typescript": "^5.5.3"
    }
}
