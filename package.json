{
    "name": "bluetooth-controller",
    "description": "Demo app to control ESP32 devices through bluetooth. Uses esbuild as bundler with native Typescript and Web Components.",
    "license": "MIT",
    "author": "Ryan Weiss (rw3iss@gmail.com)",
    "version": "0.0.0",
    "engines": {
        "node": ">=20"
    },
    "scripts": {
        "dev": "concurrently -k -r \"node scripts/esbuild/dev.js --config tsconfig.json\" \"web-dev-server --config scripts/web-dev-server.config.js\"",
        "build": "rm -rf build && node scripts/esbuild/build.js --config tsconfig.json",
        "analyze": "cem analyze --litelement",
        "start": "web-dev-server --config scripts/web-dev-server.config.js"
    },
    "dependencies": {
        "dotenv": "^16.4.7",
        "lit": "^3.1.4"
    },
    "devDependencies": {
        "@custom-elements-manifest/analyzer": "^0.10.3",
        "@web/dev-server": "^0.4.6",
        "autoprefixer": "^10.4.20",
        "concurrently": "^8.2.2",
        "esbuild": "^0.24.2",
        "esbuild-node-externals": "^1.16.0",
        "esbuild-sass-plugin": "^3.3.1",
        "fs-extra": "^11.2.0",
        "postcss": "^8.4.49",
        "tslib": "^2.6.3",
        "typescript": "^5.5.3"
    },
    "customElements": "custom-elements.json"
}
